---
import Layout from "../layouts/Layout.astro";
export const prerender = true

---

<Layout title="404">
    <div class="text-center">
        <h1 class="text-6xl font-bold text-white">404</h1>
        <p class="mt-4 text-lg text-white">
          Oops! The page you’re looking for doesn’t exist.
        </p>
        <a
          href="/"
          class="mt-6 font-medium inline-block px-6 py-3 text-white bg-indigo-700 rounded-md hover:bg-indigo-400 hover:text-gray-300 hover:shadow-lg transition-all duration-300 ease-in-out hover:opacity-70 hover:scale-110 w-40"
        >
          Home
        </a>
      </div>
</Layout>
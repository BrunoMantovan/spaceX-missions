<div id="cta" class="flex flex-col items-center justify-center relative">
    <a href="#missions" id="cta-inner" class="flex flex-col items-center justify-center text-teal-600 font-bold text-2xl relative">
        <span>Explore Missions</span>
        <img src="/down-arrow.svg" alt="" class="w-8 h-8 animate-[bounce_1.5s_infinite] inline-block mt-2" />
    </a>
</div>

<script type="module" is:client="load">
    const header = document.querySelector("header")
    const callToAction = document.getElementById("cta")
    const ctaInner = document.getElementById("cta-inner")

    const resizeCTA = ()=>{
        if(!header || !callToAction || !ctaInner) return
        const headerHeight = header.offsetHeight
        const windowHeight = window.innerHeight
        callToAction.style.height = `${windowHeight - headerHeight}px`

        ctaInner.style.transform = `translateY(-${headerHeight/2}px)`
    }
    resizeCTA()
    window.addEventListener("resize", resizeCTA)

</script>